{% extends 'Admin/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Listes des Départements</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="card-body table-responsive">
                    <div class="row">
                        <div class="col-md-1 offset-md-11" style="margin-bottom: 20px" ><a title="Ajouter un département" class="btn btn-primary btn-xs" href="{{ path('addDepartement') }}"><i class="fa fa-plus"></i></a></div>
                    </div>
                    <table width="100%" class="table table-hover table-striped table-bordered">
                        <thead>
                        <tr class="odd gradeX">
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody id="tableBody">
                        {% for departement in departements %}
                            <tr>
                            <td>{{ departement.name }}</td>
                            <td>{{ departement.description }}</td>
                                <td>
                                    <div style="display: inline-block;">
                                        <button title="Modifier"
                                                class="btn btn-success btn-xs editDepartmentModal"
                                                data-toggle="modal"
                                                data-id="{{ departement.id }}"
                                        ><i class="fa fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}