{% extends 'Admin/index.html.twig' %}

{% block content %}
        <div class="container">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Ajouter un professeur</h2>
                    <hr>
                </div>
            </div>
            <div class="row">
                <!-- /.col-lg-12 -->
            </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.firstName) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.secondName) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.email) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.tel) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                    {{ form_row(form.departement) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                    {{ form_row(form.somme) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.plainPassword.first) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.plainPassword.second) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.imageFile) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                <a class="btn btn-warning" href="{{ path('teachersList') }}" >Annuler</a>
                <button class="btn btn-primary" type="submit">Ajouter</button>
                {{ form_end(form) }}
                </div>
        </div>
        </div>

{% endblock %}