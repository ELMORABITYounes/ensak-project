{% extends 'Admin/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Listes des étuiants</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="card-body table-responsive">
                    <div class="row">
                        <div class="col-md-4">{{ form_start(form) }} {{ form_row(form.niveau,{"id":"niveauSelect"}) }} {{ form_end(form) }}</div>
                        <div class="col-md-1 offset-md-7" style="margin-top: 20px"><a title="Ajouter un étudiant" class="btn btn-primary btn-xs" href="{{ path('addStudent') }}"><i class="fa fa-plus"></i></a></div>
                    </div>
                    <table width="100%" class="table table-hover table-striped table-bordered table-sm" id="dataTables">
                        <thead>
                        <tr class="odd gradeX">
                            <th>CNE</th>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Numer de Télephone</th>
                            <th>Niveau</th>
                            <th>Filière</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody id="tableBody">
                        {% for student in students %}
                            <tr>
                            <td>{{ student.cne }}</td>
                            <td>{{ student.secondName }}</td>
                            <td>{{ student.firstName }}</td>
                            <td>{{ student.email }}</td>
                            <td>{{ student.tel }}</td>
                            <td>{{ student.niveau.libelle }}</td>
                            <td>{{ student.niveau.filiere.name }}</td>
                            <td>
                                <div style="display: inline-block;">
                                    <button title="Modifier"
                                            class="btn btn-success btn-xs editModal"
                                            data-toggle="modal"
                                            data-id="{{ student.id }}"
                                    ><i class="fa fa-edit"></i>
                                    </button>
                                    {% if student.enabled == 1 %}
                                        {# Bouton pour Bloquer un etudiant#}
                                        <button title="Bloquer"
                                                class="btn btn-danger btn-xs bloquerModale"
                                                data-id="{{ student.id }}"><i
                                                    class="fa fa-ban"></i>
                                        </button>
                                    {% else %}
                                        {# Bouton pour Débloquer un étudiant #}
                                        <button title="deBloquer"
                                                class="btn btn-secondary btn-xs dbloquerModale"
                                                data-id="{{ student.id }}"><i
                                                    class="fa fa-ban"></i>
                                        </button>
                                        {# Bouton Pour Débloquer un Broker #}
                                    {% endif %}
                                </div>
                            </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}