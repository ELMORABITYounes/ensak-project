{% extends 'Admin/index.html.twig' %}

{% block content %}
        <div class="container">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-12">
                    <h2 class="page-header">Ajouter une société</h2>
                    <hr>
                </div>
            </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.name) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                {{ form_row(form.address) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-label-group">
                                    {{ form_row(form.secteursActivites) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                <a class="btn btn-warning" href="{{ path('societesList') }}" >Annuler</a>
                <button class="btn btn-primary" type="submit">Ajouter</button>
                {{ form_end(form) }}
                </div>
        </div>

{% endblock %}