{% extends 'Admin/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Listes des encadrant de la société {{ societe.name }}</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="card-body table-responsive">
                    <table width="100%" class="table table-hover table-striped table-bordered table-sm" id="dataTables">
                        <thead>
                        <tr class="odd gradeX">
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Email</th>
                            <th>Numero de Télephone</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody id="tableBody">
                        {% for encadrant in encadrants %}
                            <tr>
                                <td>{{ encadrant.secondName }}</td>
                                <td>{{ encadrant.firstName }}</td>
                                <td>{{ encadrant.email }}</td>
                                <td>{{ encadrant.tel }}</td>
                                <td>
                                    <div style="display: inline-block;">
                                        <a href="{{ path('editEncadrant',{"id":encadrant.id}) }}" title="Modifier L'encadrant"
                                                class="btn btn-success btn-xs"
                                                ><i class="fa fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}