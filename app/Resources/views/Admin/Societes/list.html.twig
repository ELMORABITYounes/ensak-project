{% extends 'Admin/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Listes des sociétés</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="card-body table-responsive">
                    <div class="row">
                        <div class="col-md-4">{{ form_start(form) }} {{ form_row(form.secteurActivite,{"id":"secteurSelect"}) }} {{ form_end(form) }}</div>
                        <div class="col-md-1 offset-md-7" style="margin-top: 20px"><a title="Ajouter une société" class="btn btn-primary btn-xs" href="{{ path('addSociete') }}"><i class="fa fa-plus"></i></a></div>
                    </div>
                    <table width="100%" class="table table-hover table-striped table-bordered table-sm" id="dataTables">
                        <thead>
                        <tr class="odd gradeX">
                            <th>Nom</th>
                            <th>Addresse</th>
                            <th>Secteurs d'activités</th>
                            <th>Encadrants</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody id="tableBody">
                        {% for societe in societes %}
                            <tr>
                            <td>{{ societe.name }}</td>
                            <td>{{ societe.address }}</td>
                                <td>
                                {% for secteurActivite in societe.secteursActivites %}
                                    {{ secteurActivite.name }}<br>
                                {% endfor %}
                                </td>
                                <td>
                                    <div style="display: inline-block;">
                                        <a href="{{ path('listEncadrants',{"id":societe.id}) }}" title="Liste des encadrants"
                                                class="btn btn-success btn-xs"
                                        ><i class="fas fa-users"></i>
                                        </a>
                                        <a href="{{ path('addEncadrant',{"id":societe.id}) }}" title="Ajouter un encadrant"
                                                         class="btn btn-primary btn-xs"
                                        ><i class="fas fa-user-plus"></i>
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <div style="display: inline-block;">
                                        <button title="Modifier"
                                                class="btn btn-success btn-xs editSocieteModal"
                                                data-toggle="modal"
                                                data-id="{{ societe.id }}"
                                        ><i class="fa fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}