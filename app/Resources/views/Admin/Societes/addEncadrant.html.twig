{% extends 'Admin/index.html.twig' %}

{% block content %}
    <div class="container">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Ajouter un encadrant</h2>
                <hr>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        {{ form_row(form.societe) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        {{ form_row(form.firstName) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        {{ form_row(form.secondName) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        {{ form_row(form.tel) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-label-group">
                        {{ form_row(form.email) }}
                    </div>
                </div>
            </div>
        </div>
        <div>
            <a class="btn btn-warning" href="{{ path('societesList') }}" >Annuler</a>
            <button class="btn btn-primary" type="submit">Ajouter</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}