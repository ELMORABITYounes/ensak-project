{% extends 'Admin/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4>Listes des Modules</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="card-body table-responsive">
                    <div class="row">
                        <div class="col-md-4">{{ form_start(form) }} {{ form_row(form.departemrnt,{"id":"depSelectForModules"}) }} {{ form_end(form) }}</div>
                        <div class="col-md-1 offset-md-7" style="margin-top: 20px"><a title="Ajouter un module" class="btn btn-primary btn-xs" href="{{ path('addModule') }}"><i class="fa fa-plus"></i></a></div>
                    </div>
                    <table width="100%" class="table table-hover table-striped table-bordered table-sm" id="dataTables">
                        <thead>
                        <tr class="odd gradeX">
                            <th>Nom</th>
                            <th>Nombre d'heures de Cours</th>
                            <th>Nombre d'heures de TD</th>
                            <th>Cahier de Charge</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody id="tableBody">
                        {% for module in modules %}
                            <tr>
                                <td>{{ module.libelle }}</td>
                                <td>{{ module.nbrHCours }}</td>
                                <td>{{ module.nbrHTd }}</td>
                                <td>
                                    <div style="display: inline-block;">
                                        {% if module.cahierName is defined and module.cahierName is not null  %}
                                        <a title="Telecharger" href="{{ path('downloadCahier',{'id':module.id}) }}"
                                           class="btn btn-success btn-xs"
                                        ><i class="fas fa-download"></i>
                                        </a>
                                        <a title="Consulter" href="{{ asset(vich_uploader_asset(module, 'cahierFile')) }}"
                                           class="btn btn-primary btn-xs"
                                         target="_blank"><i class="fas fa-eye"></i>
                                        </a>
                                        {% else %}
                                            <p class="text-center" style="color: red;">aucune fichier n'est renseign√©</p>
                                        {% endif %}
                                    </div>
                                </td>
                                            <td>
                                                <button title="Modifier"
                                                        class="btn btn-success btn-xs editModuleModal"
                                                        data-toggle="modal"
                                                        data-id="{{ module.id }}"
                                                ><i class="fa fa-edit"></i></button>
                                                <button title="Supprimer"
                                                        class="btn btn-danger btn-xs deleteModuleModal"
                                                        data-toggle="modal"
                                                        data-id="{{ module.id }}"
                                                ><i class="fas fa-trash-alt"></i></button>
                                            </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

{% endblock %}