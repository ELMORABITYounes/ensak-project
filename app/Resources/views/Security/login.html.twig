{% extends 'base.html.twig' %}

{% block body%}
<div class="row">
    <div class="card card-login mx-auto mt-5 col-sm-10 col-md-8 col-lg-6">
        <div class="card-header">Bienvenue</div>
        <div class="card-body">
            {% if error %}
                <div class="alert-message error">
                    <div class="box-icon"></div>
                    <p style="font-weight: bold;font-size: 14px;">{{ error.messageKey|trans(error.messageData, 'security') }}<a href="" class="close">&times;</a>
                </div>
            {% endif %}
            {{ form_start(form) }}
            <div class="form-group">
                    <div class="form-label-group">
                        {{ form_row(form._username) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        {{ form_row(form._password) }}
                    </div>
                </div>
                <div class="form-group" style="margin-bottom: 0rem">
                    <div class="checkbox">
                        <label>
                            {{ form_row(form._remember_me) }}
                        </label>
                    </div>
                </div>
                {{ form_rest(form) }}
            <button type="submit" class="btn btn-primary btn-block">Login</button>
            {{ form_end(form) }}
            <div class="text-center">
                <a class="d-block medium" href="{{ path('request') }}">Mot de passe oubli√©</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}