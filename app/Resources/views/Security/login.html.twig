{% extends 'base.html.twig' %}

{% block body%}
<div class="row">
    {% if error %}
        <div class="col-md-6 offset-md-3 alert alert-danger alert-dismissible fade show"><strong>Erreur : </strong>{{ error.messageKey|trans(error.messageData, 'security') }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button></div>
    {% endif %}
    <div class="card card-login mx-auto mt-5 col-md-6">
        <div class="card-header">Bienvenue</div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group">
                    <div class="form-label-group">
                        {{ form_row(form._username) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-label-group">
                        {{ form_row(form._password) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            {{ form_row(form._remember_me) }}
                        </label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
            {{ form_end(form) }}
            <div class="text-center">
                <a class="d-block medium" href="{{ path('request') }}">Mot de passe oubli√©</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}